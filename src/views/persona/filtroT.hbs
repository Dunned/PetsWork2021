                                                <div class="form-group">
                                                    <button id="postular" type="button" class="btn btn-aviso disabled px-4" style="background-color: #0A1D42;"><a class="text-light disabled" >{{postula.estado}}</a></button>
                                                </div>
                                                <div class="form-group">
                                                    <button id="editar" type="button" class="btn btn-editar px-5" style="background-color: #0A1D42;"><a class="a-editar text-light" href="/persona/postular/editar/{{aviso.id}}">Editar</a></button>
                                                </div>
                                            </div>
                                        {{else}}
                                            <button id="postular" type="button" class="btn mb-3 btn-aviso px-5" style="background-color: #0A1D42;"><a class="text-light" href="/persona/postular/{{aviso.id}}">Postular</a></button>
                                        {{/if}}
                                        <p class="my-0">Fecha de publicacion:</p>
                                        <p class="my-0">{{timeago aviso.created_at}}</p>
                                        <p class="my-0">Estado:</p>
                                        <p class="my-0">{{aviso.estado}}</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <h4 class="mt-3">Descripción del aviso laboral</h4>
                                        <textarea class="form-control rounded-0" rows="22" style="border: none;" disabled>{{aviso.descripcion}}</textarea>
                                    </div>
                                </div>
                            </div>    
                        </div>

